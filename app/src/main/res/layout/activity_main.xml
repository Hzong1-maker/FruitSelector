<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Spinner
        android:id="@+id/fruitSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"/>

    <Button
        android:id="@+id/showFruitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Selected Fruit"
        android:layout_below="@id/fruitSpinner"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/selectedFruitTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selected Fruit: "
        android:textSize="24sp"
        android:layout_below="@id/showFruitButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

</RelativeLayout>
